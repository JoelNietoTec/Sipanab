.container
  .article-container.container
    %h2.content-title
      = @article.title
      - if current_user
        = link_to edit_article_path(@article), :class => 'btn btn-warning' do
          Editar

    - @article.tag_list.each do |tag|
      %span.label.label-warning
        = tag
    .content
      = @article.content.html_safe
